{
  "name": "Sam-Affiliates-Portal",
  "version": "1.2.0",
  "description": "Sam-affiliates portal",
  "engines": {
    "node": "6.10.3",
    "npm": "3.10.10"
  },
  "scripts": {
    "postinstall": "npm run build",    
    "start": "./node_modules/.bin/babel-node -- server/index.js && npm run prod",
    "server": "nodemon --exec babel-node -- server/index.js",
    "dev": "npm run server & webpack-dev-server --open --config webpack/webpack.config.dev.js",
    "build": "rm -rf dist && webpack --config webpack/webpack.config.prod.js  && cp -a assets/ dist/",
    "prod": "cd dist && python -m SimpleHTTPServer 8080",
    "lint": "eslint src",
    "ngrok": "ngrok http -region eu 8080",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --no-semi --single-quote --trailing-comma all",
      "git add"
    ]
  },
  "author": "Ahmed",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-jest": "^19.0.0",
    "babel-plugin-styled-components": "0.0.3-0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.23.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "husky": "^0.13.3",
    "jest": "^19.0.2",
    "lint-staged": "^3.4.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.2.2",
    "react-test-renderer": "^15.5.4",
    "semantic-ui-react": "^0.67.0"
  },
  "dependencies": {
    "body-parser": "^1.16.1",
    "express": "^4.15.2",
    "express-session": "^1.15.3",
    "jsonfile": "^3.0.0",
    "lodash": "^4.17.4",
    "offline-plugin": "^4.7.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "react": "^15.5.4",
    "react-code-splitting": "^1.1.1",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "^5.0.0-alpha.6",
    "redux": "^3.5.2",
    "redux-thunk": "^2.2.0",
    "styled-components": "^1.4.5",
    "webpack": "^2.4.1",
    "serve": "^5.1.4",
    "webpack-dev-server": "^2.4.2",
    "html-webpack-plugin": "^2.24.1",
    "babel-loader": "^6.4.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-jest": "^19.0.0",
    "babel-plugin-styled-components": "0.0.3-0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.23.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "husky": "^0.13.3",
    "jest": "^19.0.2",
    "lint-staged": "^3.4.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.2.2",
    "react-test-renderer": "^15.5.4",
    "semantic-ui-react": "^0.67.0"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "react",
      "stage-0"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "helpers": false,
          "polyfill": false
        }
      ]
    ],
    "env": {
      "development": {
        "plugins": [
          "styled-components"
        ]
      },
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": "airbnb",
    "parser": "babel-eslint",
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "webpack/webpack.config.dev.js"
        }
      }
    },
    "rules": {
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "no-confusing-arrow": 0,
      "no-shadow": 0,
      "no-underscore-dangle": 0,
      "semi": [
        1,
        "never"
      ],
      "import/no-extraneous-dependencies": 0,
      "import/prefer-default-export": 0,
      "import/no-duplicates": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js"
          ]
        }
      ]
    }
  }
}
